{% include 'header.html' %}

<div id="main">
    <div class="intro">
        <h1 class="header-h1">Miners</h1>
        <div class="minercontent">

            Total pool hashrate: {{ showFriendlyHash(total_pool_hashrate.hashrate) }}

            <table class="table">
                <tr>
                    <th>Miner</th>
                    <th>Hashrate (last 5 minutes, short average)</th>
                    <th>Hashrate (last 3 hours, more accurate)</th>
                </tr>

                {% for miner in miners %}
                <tr>
                    <td>
                        <a href="index.php?page=index&wallet={{ miner.username }}"> {{ miner.username }} </a>
                    </td>
                    <td>{{ showFriendlyHash(attribute(hahsrates_5_min, miner.userid).hashrate) }}</td>
                    <td>long average</td>
                </tr>
                {% endfor %}

            </table>

        </div>
    </div>
</div>

{% include 'footer.html' %}