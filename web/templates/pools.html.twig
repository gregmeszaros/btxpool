                <tr>
                    <td>
                        <img class="logo-list" src="images/raven.png" alt="raven mining" />
                        <a href="?page=dashboard&coin=raven">Raven (RVN)</a> <strong>Port: 8006</strong>
                    </td>
                    <td>x16r</td>
                    <td>{{ showFriendlyHash(pool_hashrate_raven) }}</span> / {{ total_hashrate_raven_gh|default('n/a')|round(1) }} Gh/s</td>
                    <td>{{ difficulty_raven|default('n/a')|round(1)  }}</td>
                    <td class="total-miners">{{ total_miners_raven }}</td>
                    <td>0.5%</td>
                </tr>
                <tr>
                    <td>
                        <img class="logo-list" src="images/votecoin.png" alt="votecoin equihash mining" />
                        <a href="?page=dashboard&coin=votecoin">Votecoin (VOT)</a> <strong>Port: 3333</strong>
                    </td>
                    <td>equihash (Z9 friendly)</td>
                    <td>{{ pool_hashrate_votecoin }} </span> / {{ total_hashrate_votecoin_gh }}</td>
                    <td>{{ difficulty_votecoin|default('n/a')|round(1)  }}</td>
                    <td class="total-miners">{{ total_miners_votecoin }}</td>
                    <td>1%</td>
                </tr>
                <tr>
                    <td>
                        <img class="logo-list" src="images/anon.png" alt="anon 144_5 mining" />
                        <a href="?page=dashboard&coin=votecoin">ANON (ANON)</a> <strong>Port: 3334</strong>
                    </td>
                    <td>equihash (144_5)</td>
                    <td>{{ pool_hashrate_anon }} </span> / {{ total_hashrate_anon_gh }}</td>
                    <td>{{ difficulty_anon|default('n/a')|round(1)  }}</td>
                    <td class="total-miners">{{ total_miners_anon }}</td>
                    <td>1%</td>
                </tr>
                <tr>
                    <td>
                        <img class="logo-list" src="images/zel.png" alt="zelcash equihash mining" />
                        <a href="?page=dashboard&coin=zel">ZELCASH (ZEL)</a> <strong>Port: 3335</strong>
                    </td>
                    <td>equihash (144_5)</td>
                    <td>{{ pool_hashrate_zel }} </span> / {{ total_hashrate_zel_gh }}</td>
                    <td>{{ difficulty_zel|default('n/a')|round(1)  }}</td>
                    <td class="total-miners">{{ total_miners_zel }}</td>
                    <td>1%</td>
                </tr>
                <tr>
                    <td>
                        <strong>Summary all coins</strong>
                    </td>
                    <td></td>
                    {% set total_hash = pool_hashrate_bitcore + pool_hashrate_lux + pool_hashrate_bitsend + pool_hashrate_raven ?? 0 %}
                    <td id="total-hash-sum">{{ showFriendlyHash(total_hash) }}</td>
                    <td></td>
                    <td id="all-miners-count"></td>
                    <td></a></td>
                </tr>

            </table>

            <script>
              var sum = 0;
              // Calculate total miners and total pool hash
              $(".total-miners").each(function() {
                var value = $(this).text();

                // Always make sure we have numeric value
                value = value.replace(/[^0-9\.]+/g, "");

                // Calculate only if the value is number
                if(!isNaN(value) && value.length != 0) {
                  sum += parseFloat(value);
                }
              });
              document.getElementById("all-miners-count").innerHTML = sum + " miners";
            </script>

        </div>

        <div class="minercontent">

            <table class="table">
                <tr>
                    <td class="custom-twitter">
